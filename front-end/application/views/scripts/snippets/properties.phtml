/**
 * View snippet for Properties form elements
 *
 * Date: 8/29/12
 *
 * @var array $properties
 */
$count = 0;
$keys = @array_keys($properties);
$values = @array_values($properties);

$propKeyTip = $translate->translate("Enter a unique key for this property");
$propValueTip = $translate->translate("Enter the value for this property");
$propAddTip = $translate->translate("Add additional property");
$propRemoveTip = $translate->translate("Remove property");

for($i = 0; $i <= count($properties); $i++):
?>

<div class="control-group property <?= !empty($validationErrors['property'][$i])?"error":""?>" count="<?=$i?>" id="propertyGroup<?=$i?>">
    <? if($i === 0): ?>
    <label class="control-label" for="properties<?=$i?>"><? echo $translate->translate("Properties")?></label>
    <? endif ?>
    <div class="controls">
        <input type="text" class="input-small" placeholder="<? echo $translate->translate("Key")?>"
               id="properties<?=$i?>" name="property[<?=$i?>][name]" value="<?=@$keys[$i]?>"
               rel="tooltip" title="<?=$propKeyTip?>">
        <input type="text" class="input-small" placeholder="<? echo $translate->translate("Value")?>"
               name="property[<?=$i?>][value]" value="<?=@$values[$i]?>"
               rel="tooltip" title="<?=$propValueTip?>">
        <? if($i === 0): ?>
        <button class="btn newItem" type="property" title="<?=$propAddTip?>" id="propertyPlus"
                rel="tooltip" data-placement="right"><i class="icon-plus"></i></button>
        <? else: ?>
        <button class="btn removeItem" type="property" number="<?=$i?>" title="<?=$propRemoveTip?>"
                rel="tooltip" data-placement="right"><i class="icon-minus"></i></button>
        <? endif ?>
        <span class="help-inline">
        <?if(!empty($validationErrors['property'][$i])):
            foreach($validationErrors['property'][$i] as $error): ?>
            <?= $error ?><br/>
            <? endforeach ?>
        <? endif ?>
        </span>
    </div>
</div>
<? endfor ?>

