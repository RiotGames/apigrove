/**
 * View Snippet for TDR Rule form elements
 *
 * Date: 8/29/12
 *
 * @var TdrData $tdrData
 * @var
 */

$totalCount = @count($tdrData->dynamicTdrs)+@count($tdrData->staticTdrs);
for($i = 0; $i <= $totalCount; $i++):
    $dynSize = @count($tdrData->dynamicTdrs);
    $rule = $i >= $dynSize? @$tdrData->staticTdrs[$i-$dynSize]:$tdrData->dynamicTdrs[$i];
    if (empty($rule)){
        $rule = new stdClass();
    }
    ?>
<?$t = new Zend_Translate(
    'gettext',  //the adapter
    APPLICATION_PATH.'/lang', //where the lang files will be stored
    'auto',  //set to auto include .mo files
    array('scan' => Zend_Translate::LOCALE_FILENAME) //set to scan lang files
);?>
<div class="control-group tdrRule <?=!empty($validationErrors['tdr'][$i])?"error":""?>" count="<?=$i?>" id="tdrRuleGroup<?=$i?>">
    <? if($i === 0): ?>
    <label class="control-label" for="tdrRules"><? echo $t->_("TDR Rules")?></label>
    <? endif ?>
    <div class="controls">
        <input type="text" class="input-small" placeholder="Name" name="tdr[<?=$i?>][name]" id="tdrRules" value="<?=@$rule->tdrPropName?>">
        <?
        $selected = 0;
        if($rule instanceof StaticTdr && $rule->kind === TdrRuleType::PROPERTY) $selected = 1;
        else if($rule instanceof StaticTdr && $rule->kind === TdrRuleType::STATIC_VAL) $selected = 2;
        else if($rule instanceof DynamicTdr) $selected = 3;

        ?>
        <select class="input-small tdrType" name="tdr[<?=$i?>][type]" item="<?=$i?>">
            <option>Type</option>
            <option <?= $selected == 1?"selected":""?>><? echo $t->_("Property")?></option>
            <option <?= $selected == 2?"selected":""?>><? echo $t->_("Static")?></option>
            <option <?= $selected == 3?"selected":""?>><? echo $t->_("Dynamic")?></option>
        </select>
        <? $showExtractFrom = ($rule instanceof DynamicTdr); ?>
        <select class="input-small" name="tdr[<?=$i?>][extractFrom]" style="<?=$showExtractFrom?"":"display: none;"?> width: 120px;" id="tdrRuleExtractFrom<?=$i?>">
            <option>Extract From</option>
            <? /** @var StaticTdr $rule */?>
            <option <?= @$rule->extractFrom===TdrRuleExtractFrom::REQUEST?"selected":""?>><? echo $t->_("Request")?></option>
            <option <?= @$rule->extractFrom===TdrRuleExtractFrom::RESPONSE?"selected":""?>><? echo $t->_("Response")?></option>
        </select>
        <? $value = "";
        if($rule instanceof StaticTdr){
            if(empty($rule->value)) $value = $rule->property;
            else $value = $rule->value;
        }
        else if($rule instanceof DynamicTdr){
            $value = $rule->httpHeaderName;
        }
        ?>
        <input type="text" class="input-small" placeholder="<? echo $t->_("Value")?>"
               name="tdr[<?=$i?>][value]" value="<?=$value?>" id="tdrRuleValue<?=$i?>" style="width: 120px">
        <? if($i === 0): ?>
        <button class="btn newItem" type="tdrRule" title="<? echo $t->_("Add additional property")?>" id="tdrPlus"><i class="icon-plus"></i></button>
        <? else: ?>
        <button class="btn removeItem" type="tdrRule" number="<?=$i?>" title="<? echo $t->_("Remove property")?>"><i class="icon-minus"></i></button>
        <? endif ?>
        <span class="help-inline">
                <?if(!empty($validationErrors['tdr'][$i])):
            foreach($validationErrors['tdr'][$i] as $error): ?>
                <?= $error ?><br/>
                <? endforeach ?>
            <? endif ?>
                </span>
    </div>
</div>
<? endfor ?>
